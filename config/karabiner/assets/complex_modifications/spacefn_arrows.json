{
  "title": "SpaceFN Layer (Space + HJKL as Arrows)",
  "rules": [
    {
      "description": "Use Space as FN layer for arrow keys",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": { "optional": ["any"] }
          },
          "to_if_alone": [{ "key_code": "spacebar" }],
          "to_if_held_down": [{ "set_variable": { "name": "space_fn", "value": 1 } }],
          "to_after_key_up": [{ "set_variable": { "name": "space_fn", "value": 0 } }]
        },
        {
          "type": "basic",
          "from": { "key_code": "h" },
          "to": [{ "key_code": "left_arrow" }],
          "conditions": [
            { "type": "variable_if", "name": "space_fn", "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "l" },
          "to": [{ "key_code": "right_arrow" }],
          "conditions": [
            { "type": "variable_if", "name": "space_fn", "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "j" },
          "to": [{ "key_code": "down_arrow" }],
          "conditions": [
            { "type": "variable_if", "name": "space_fn", "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "k" },
          "to": [{ "key_code": "up_arrow" }],
          "conditions": [
            { "type": "variable_if", "name": "space_fn", "value": 1 }
          ]
        }
      ]
    }
  ]
}
