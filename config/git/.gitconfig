[user]
	email = akameco.t@gmail.com
	name = akameco
[core]
	excludesfile = ~/.gitignore_global
	editor = nvim -f
	quotepath = false
[color]
	ui = auto
[init]
	defaultBranch = main
;	templatedir = ~/.git_template
[alias]
  c = commit -m
  co = checkout
  b = branch
  s = status
  mkpr = !"f() { git checkout -b $1; git ec; git push -u origin $1; hub pull-request; git see; }; f"
  d = !git branch --merged | grep -vE '^\\*|master$|develop$' | xargs -I % git branch -d %
	end = \\!git-end
  pro = !git push -u origin $(git symbolic-ref --short HEAD) && git see

  # 前回のコミットメッセージを使ってamendする
  amend = commit --amend --reuse-message=HEAD
  open = browse
[push]
	default = simple
[ghq]
	root = ~/dev
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	required = true
	clean = git-lfs clean -- %f
	process = git-lfs filter-process
[commit]
  template = ~/.gitmessage
