{
  "parser": "babel-eslint",
    "rules": {
      "strict": 2,
      "indent": [1, 2],
      "quotes": [2, "single"],
      "linebreak-style": [2, "unix"],
      "semi": [2, "never"],
      "default-case": 2,
      "no-var": 2,
      "no-void": 2,
      "space-before-function-paren": [2, "never"],
      "no-nested-ternary": 2,
      "no-multiple-empty-lines": [2, {
        "max": 1
      }],
      "no-else-return": 2,
      "no-self-compare": 2,
      "max-len": [1, 100, 2],
      "guard-for-in": 1,
      "no-process-env": 1,
      "no-var": 1,
    },
    "env": {
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    ecmaFeatures: { modules: true }
}
