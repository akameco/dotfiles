alias ls='exe --encoding="utf8" ls -Fh'
alias la='exe --encoding="utf8" ls -aFh'
alias lsl='exe --encoding="utf8" ls -laFh'
alias cat='exe --encoding="utf8" cat'
alias e='exit'

alias ..='cd ..'
alias sr='cd ~/Dropbox/src'
alias dot='cd ~/Dropbox/dotfiles'
alias ruby='cd ~/src/ruby'

alias g='git'
alias ga='git add .'
alias gc='git commit -m'
alias gco='git --encoding="utf8" checkout'
alias gs='exe --encoding="utf8" git status'
alias gb='exe --encoding="utf8" git branch'
alias s='exe --encoding="utf8" git show'

alias gp='exe --encoding="utf8" git push'
alias gpo='exe --encoding="utf8" git push origin '
alias gpom='exe --encoding="utf8" git push origin master'

alias gr='exe --encoding="utf8" git reset --hard HEAD^'

alias gl='exe --encoding="utf8" git log --date=iso --color --decorate --oneline'
alias glt='exe --encoding="utf8" git log --date=iso --color --decorate --pretty=format:"%Cblue%h%Creset %Cgreen%cr %Creset%s"'
alias glf='exe --encoding="utf8" git log --date=iso --color --decorate=full --date=relative --oneline'
alias gla='exe --encoding="utf8" git log --graph --color --branches --decorate=full --oneline'

alias be='bundle exec'
alias beruby='bundle exec ruby'
alias bi='bundle install --path vendor/bundle'

alias rl='source ~/.vimshrc'
